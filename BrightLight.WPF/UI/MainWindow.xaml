<Window x:Class="BrightLight.WPF.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrightLight.WPF"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        xmlns:converters="clr-namespace:BrightLight.WPF.UI.Converters"
        xmlns:ui="clr-namespace:BrightLight.WPF.UI"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:resultTypes="clr-namespace:BrightLight.PluginInterface.Result;assembly=BrightLight.PluginInterface"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Background="Transparent"
        Name="BrightlightMainWindow" Height="500"
        Title="MainWindow" Width="750" Topmost="True" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True" DataContext="{x:Static local:Global.MainViewModel}" Loaded="WindowLoaded" KeyDown="KeyboardKeyDown" ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="15"/>
        </Style>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToInvertedVisibilityConverter x:Key="BoolToInvertedVisibilityConverter"/>
        <converters:FontAwesomeIdToFontAwesomeIconConverter x:Key="FontAwesomeIdToFontAwesomeIconConverter"/>
        <converters:BitmapToBitmapImageConverter x:Key="BitmapToBitmapImageConverter"/>
        <converters:ResultCountToVisibilityConverter x:Key="ResultCountToVisibilityConverter"/>
        <Storyboard x:Key="ShowResultsAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Height" To="500" Duration="0:0:.1" />
        </Storyboard>
        <Storyboard x:Key="HideResultsAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Height" To="60" Duration="0:0:.1" />
        </Storyboard>
        <!-- https://stackoverflow.com/questions/4501754/wpf-animate-window-visibility-change -->
        <Storyboard x:Key="HideMe">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:.1" To="0" Completed="HideMeCompleted"/>
        </Storyboard>
        <Storyboard x:Key="ShowMe">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" Duration="0:0:.1" To="1"/>
        </Storyboard>
    </Window.Resources>

    <Border CornerRadius="15,15,15,15" Background="#DDFFFFFF" x:Name="Border" Height="60">
        <Grid>
            <!-- Taskbar icon BEGIN -->
            <tb:TaskbarIcon ToolTipText="BrightLight" IconSource="..\simple-icon.ico">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Open search" Click="OpenSearchClick">
                            <MenuItem.Icon>
                                <fa:ImageAwesome Icon="Search" HorizontalAlignment="Center" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Settings" Click="OpenSettingsClick">
                            <MenuItem.Icon>
                                <fa:ImageAwesome Icon="Cogs" HorizontalAlignment="Center" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Exit" Click="ExitClick">
                            <MenuItem.Icon>
                                <fa:ImageAwesome Icon="SignOut" HorizontalAlignment="Center" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
            <!-- Taskbar icon END -->
            <DockPanel>
                <Grid DockPanel.Dock="Top" Height="60">
                    <DockPanel>
                        <fa:ImageAwesome Margin="15,0,0,0" Height="40" Width="40" Icon="Search" Visibility="{Binding Searching, Converter={StaticResource BoolToVisibilityConverter}}" />
                        <fa:ImageAwesome Margin="15,0,0,0" Height="40" Width="40" Icon="Cog" Spin="True" Visibility="{Binding Searching, Converter={StaticResource BoolToInvertedVisibilityConverter}}" />
                        <Grid>
                            <TextBox VerticalAlignment="Center" Foreground="Black" x:Name="SearchTermTextBox" Height="60" Padding="10,0,0,0" VerticalContentAlignment="Center" FontSize="25" Background="Transparent" BorderThickness="0" Text="{Binding Query, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock IsHitTestVisible="False" Text="Brightlight search ..." VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" Foreground="#888888" FontSize="25">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=SearchTermTextBox}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </DockPanel>
                </Grid>
                <Separator DockPanel.Dock="Top" Margin="0"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.Resources>
                        <CollectionViewSource x:Key="resultsViewSource" Source="{Binding SearchResultCollections}">
                            <CollectionViewSource.SortDescriptions>
                                <componentModel:SortDescription PropertyName="Relevance" Direction="Descending"/>
                            </CollectionViewSource.SortDescriptions>
                        </CollectionViewSource>
                    </Grid.Resources>
                    <ScrollViewer Grid.Column="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Source={StaticResource resultsViewSource}}" BorderThickness="0" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" Background="Transparent">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Background="Transparent" Visibility="{Binding Results.Count, Converter={StaticResource ResultCountToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Height="16" Width="16" Margin="10,0,0,0">
                                                <Image Source="{Binding Icon, Converter={StaticResource BitmapToBitmapImageConverter}}" Width="16" Height="16" />
                                                <fa:ImageAwesome VerticalAlignment="Center" Height="16" Width="16" Icon="{Binding FontAwesomeIcon, Converter={StaticResource FontAwesomeIdToFontAwesomeIconConverter}}" />
                                            </Grid>
                                            <Label VerticalAlignment="Center" Content="{Binding Title}"/>
                                        </StackPanel>
                                        <ListView BorderThickness="0" ItemsSource="{Binding Results}" SelectedItem="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}, Path=DataContext.SelectedSearchResult}" LostFocus="ResultListViewOnLostFocus">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Grid Height="16" Width="16" Margin="10,0,0,0">
                                                            <Image Source="{Binding Icon, Converter={StaticResource BitmapToBitmapImageConverter}}" Width="16" Height="16" />
                                                            <fa:ImageAwesome VerticalAlignment="Center" Height="16" Width="16" Icon="{Binding FontAwesomeIcon, Converter={StaticResource FontAwesomeIdToFontAwesomeIconConverter}}" />
                                                        </Grid>
                                                        <Label Content="{Binding Title}"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <Separator Grid.Column="1">
                        <Separator.Style>
                            <Style
                                   TargetType="{x:Type Separator}"
                                   BasedOn="{StaticResource {x:Type Separator}}">
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <TransformGroup.Children>
                                                <TransformCollection>
                                                    <RotateTransform Angle="90"/>
                                                </TransformCollection>
                                            </TransformGroup.Children>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Separator.Style>
                    </Separator>
                    <Grid Grid.Column="2">
                        <ContentPresenter Content="{Binding SelectedSearchResult}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                            <ContentPresenter.Resources>
                                <DataTemplate DataType="{x:Type resultTypes:ExecutableSearchResult}">
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding Icon, Converter={StaticResource BitmapToBitmapImageConverter}}" Width="128" Height="128" />
                                        <TextBlock Margin="0,20,0,0" Text="{Binding LaunchExePath}" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
                                        <TextBlock Margin="0,20,0,0" Text="{Binding LaunchParameters}" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type resultTypes:TextSearchResult}">
                                    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding Text}" FontSize="20" TextAlignment="Center" TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type resultTypes:UrlSearchResult}">
                                    <Grid>
                                        <fa:ImageAwesome Icon="Cog" Spin="True" Height="48" Width="48" />
                                        <wpf:ChromiumWebBrowser Address="{Binding Url}"/>
                                    </Grid>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type resultTypes:HtmlSearchResult}">
                                    <Grid>
                                        <fa:ImageAwesome Icon="Cog" Spin="True" Height="48" Width="48" />
                                        <wpf:ChromiumWebBrowser IsBrowserInitializedChanged="HtmlRendererInitialized"/>
                                    </Grid>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type resultTypes:MathSearchResult}">
                                    <Grid Background="White">
                                        <StackPanel Orientation="Vertical">
                                            <controls:FormulaControl Formula="{Binding LaTeXExpression}" Margin="0,20,0,0" HorizontalContentAlignment="Center"/>
                                            <controls:FormulaControl Formula="{Binding LaTeXEvaluated}" Margin="0,20,0,0" HorizontalContentAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ContentPresenter.Resources>
                        </ContentPresenter>
                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
    </Border>
</Window>

    

    

    

    